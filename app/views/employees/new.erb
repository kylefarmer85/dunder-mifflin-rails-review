<h1>New Employee Form</h1>

<% if @employee.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@employee.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% @employee.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @employee do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br><br>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br><br>

  <%= f.label :alias %>
  <%= f.text_field :alias %><br><br>

  <%= f.label :title %>
  <%= f.text_field :title %><br><br>

  <%= f.label :office %>
  <%= f.text_field :office %><br><br>

  <%= f.label :img_url %>
  <%= f.text_field :img_url %><br><br>

  <%= f.label "Select a dog:"%>
  <%= f.collection_select :dog_id, @dogs, :id, :name, prompt: true %><br><br>
  
  <%= f.submit %>


<% end %>

